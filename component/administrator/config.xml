			<field
					name="reports_before_unpublish"
					type="text"
					default="0"
					filter="integer"
					label="AP_REPORTS_BEFORE_UNPUBLISH"
					description="AP_REPORTS_BEFORE_UNPUBLISH_DESC"
					showon="enable_reports:1"
