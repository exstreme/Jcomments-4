			<field
					name="enable_username_check"
					type="radio"
					default="1"
					label="AP_ENABLE_USERNAME_CHECK"
					description="AP_ENABLE_USERNAME_CHECK_DESC"
					layout="joomla.form.field.radio.switcher"
