		<field
				name="author_name"
				type="list"
				default="2"
				label="AP_FORM_FIELD_AUTHOR_NAME"
				description="AP_FORM_FIELD_AUTHOR_NAME_DESC"
				filter="int"
		>
			<option value="0">AP_FORM_FIELD_DISABLED</option>
			<option value="1">AP_FORM_FIELD_UNREQUIRED</option>
			<option value="2">AP_FORM_FIELD_REQUIRED_FOR_UNREGISTERED</option>
		</field>

		<field
				name="author_email"
				type="list"
				default="2"
				label="AP_FORM_FIELD_AUTHOR_EMAIL"
				description="AP_FORM_FIELD_AUTHOR_EMAIL_DESC"
				filter="int">
			<option value="0">AP_FORM_FIELD_DISABLED</option>
			<option value="1">AP_FORM_FIELD_UNREQUIRED</option>
			<option value="2">AP_FORM_FIELD_REQUIRED_FOR_UNREGISTERED</option>
		</field>

		<field
				name="author_homepage"
				type="list"
				default="1"
				label="AP_FORM_FIELD_AUTHOR_HOMEPAGE"
				filter="int"
		>
			<option value="0">AP_FORM_FIELD_DISABLED</option>
			<option value="1">AP_FORM_FIELD_UNREQUIRED</option>
			<option value="2">AP_FORM_FIELD_REQUIRED_FOR_UNREGISTERED</option>
			<option value="5">AP_FORM_FIELD_UNREQUIRED_FOR_GUESTS_HIDDEN_FOR_USERS</option>
			<option value="4">AP_FORM_FIELD_REQUIRED_FOR_GUESTS_HIDDEN_FOR_USERS</option>
			<option value="3">AP_FORM_FIELD_REQUIRED_FOR_ALL</option>
		</field>

		<field
				name="comment_title"
				type="list"
				default="0"
				label="AP_FORM_FIELD_COMMENT_TITLE"
				filter="int"
		>
			<option value="0">AP_FORM_FIELD_DISABLED</option>
			<option value="1">AP_FORM_FIELD_UNREQUIRED</option>
			<option value="3">AP_FORM_FIELD_REQUIRED_FOR_ALL</option>
		</field>

		<field
				name="show_commentlength"
				type="radio"
				default="1"
				label="AP_SHOW_COMMENTLENGTH"
				description="AP_SHOW_COMMENTLENGTH_DESC"
				layout="joomla.form.field.radio.switcher"
				filter="boolean"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
				name="smilies_path"
				type="text"
				default="media/com_jcomments/images/tmpl/smilies/default/"
				label="AP_FORM_FIELD_SMILIES_PATH"
				filter="path"
		/>

		<field
				name="custom_fields_enable"
				type="radio"
				label="JGLOBAL_CUSTOM_FIELDS_ENABLE_LABEL"
				default="1"
				layout="joomla.form.field.radio.switcher"
				filter="boolean"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset name="editor" label="AP_FORM_EDITOR_PARAMS">
		<field
				name="editor_format"
				type="list"
				default="bbcode"
				label="AP_FORM_FORMAT"
				description="AP_FORM_FORMAT_DESC"
				filter="string"
		>
			<option value="bbcode">BBcode</option>
			<option value="xhtml">XHTML</option>
		</field>

		<field
				name="editor_theme"
				type="filelist"
				default="square"
				label="AP_FORM_EDITOR_THEME"
				description="AP_FORM_EDITOR_THEME_DESC"
				directory="media/com_jcomments/css/editor/"
				stripext="1"
				fileFilter="\.css$"
				exclude="\-custom.css$"
				hide_none="1"
				hide_default="true"
				validate="options"
		/>

		<field
				name="editor_theme_icons"
				type="filelist"
				default=""
				label="AP_FORM_EDITOR_ICONS"
				description="AP_FORM_EDITOR_ICONS_DESC"
				directory="media/com_jcomments/js/editor/icons/"
				stripext="1"
				fileFilter="\.js$"
				hide_none="1"
				hide_default="true"
				validate="options"
		>
			<option value="">JNONE</option>
		</field>

