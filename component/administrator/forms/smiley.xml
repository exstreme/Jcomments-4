<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit" addfieldprefix="Joomla\Component\Jcomments\Administrator\Field">
		<field
				name="code"
				type="text"
				size="40"
				label="A_SMILIES_FIELD_CODE_LABEL"
				description="A_SMILIES_FIELD_CODE_DESC"
				required="true"/>

		<field
				name="name"
				type="text"
				size="40"
				label="A_SMILIES_FIELD_NAME_LABEL"
				description="A_SMILIES_FIELD_NAME_DESC"/>

		<field
				name="image"
				type="smileyimage"
				directory="components/com_jcomments/images/smilies"
				hide_none="1"
				label="A_SMILIES_FIELD_IMAGE_LABEL"
				size="40"
				class="form-select"
				description="A_SMILIES_FIELD_IMAGE_DESC"
				required="true"/>

		<field
				name="published"
				type="list"
				label="JSTATUS"
				default="0"
				class="form-select-color-state"
				size="1"
				validate="options"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field
				name="ordering"
				type="smileyordering"
				class="form-select"
				label="JFIELD_ORDERING_LABEL"
				description="JFIELD_ORDERING_DESC"/>

		<field
				name="id"
				type="text"
				default="0"
				readonly="true"
				class="readonly"
				label="JGLOBAL_FIELD_ID_LABEL"
		/>

		<!-- Used in view to internal access checking -->
		<field
				name="checked_out"
				type="hidden"
				filter="unset"/>

		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"/>
	</fieldset>
</form>
