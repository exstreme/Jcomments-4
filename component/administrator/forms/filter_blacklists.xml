<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				inputmode="search"
				label="JSEARCH_FILTER_LABEL"
				description="A_BLACKLIST_SEARCH_DESC"
				hint="JSEARCH_FILTER"
		/>
	</fields>

	<fields name="list">
		<field
				name="fullordering"
				type="list"
				label="JGLOBAL_SORT_BY"
				default="jb.ip DESC"
				onchange="this.form.submit();"
				validate="options"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="jb.ip ASC">A_BLACKLIST_SORT_IP_ASC</option>
			<option value="jb.ip DESC">A_BLACKLIST_SORT_IP_DESC</option>
			<option value="u3.username ASC">A_BLACKLIST_SORT_EDITOR_ASC</option>
			<option value="u3.username DESC">A_BLACKLIST_SORT_EDITOR_DESC</option>
			<option value="u.name ASC">A_BLACKLIST_SORT_USER_ASC</option>
			<option value="u.name DESC">A_BLACKLIST_SORT_USER_DESC</option>
			<option value="jb.created ASC">JDATE_ASC</option>
			<option value="jb.created DESC">JDATE_DESC</option>
			<option value="jb.expire ASC">A_BLACKLIST_SORT_EXPIRE_ASC</option>
			<option value="jb.expire DESC">A_BLACKLIST_SORT_EXPIRE_DESC</option>
			<option value="jb.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="jb.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
				name="limit"
				type="limitbox"
				label="JGLOBAL_LIST_LIMIT"
				default="25"
				onchange="this.form.submit();"
		/>
	</fields>
</form>
