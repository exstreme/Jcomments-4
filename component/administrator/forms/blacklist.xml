<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="edit" addruleprefix="Joomla\Component\Jcomments\Administrator\Rule">
		<field
				name="ip"
				type="text"
				class="inputbox"
				size="40"
				label="A_BLACKLIST_IP"
				validate="Ip"
		/>

		<field
				name="userid"
				type="user"
				label="A_BLACKLIST_USER"
				validate="UserId"
		/>

		<field
				name="reason"
				type="textarea"
				rows="2"
				cols="50"
				label="A_BLACKLIST_REASON"
				description="A_BLACKLIST_REASON_DESC"
				filter="string"
				required="true"
				maxlength="255"
		/>

		<field
				name="notes"
				type="textarea"
				rows="2"
				cols="50"
				label="A_BLACKLIST_NOTES"
				description="A_BLACKLIST_NOTES_DESC"
				filter="string"
				maxlength="255"
		/>

		<field
				name="expire"
				type="calendar"
				label="A_BLACKLIST_EXPIRE"
				translateformat="true"
				showtime="true"
				filter="user_utc"
		/>

		<field
				name="created"
				type="calendar"
				label="JGLOBAL_FIELD_CREATED_LABEL"
				translateformat="true"
				showtime="true"
				filter="user_utc"
				default="NOW"
				readonly="true"
		/>

		<field
				name="created_by"
				type="user"
				label="JGRID_HEADING_CREATED_BY"
				validate="UserId"
				readonly="true"
		/>

		<field
				name="id"
				type="text"
				default="0"
				readonly="true"
				class="readonly"
				label="JGLOBAL_FIELD_ID_LABEL"
				description="JGLOBAL_FIELD_ID_DESC"
		/>

		<!-- Used in view to internal access checking -->
		<field
				name="checked_out"
				type="hidden"
				filter="unset"
		/>

		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"
		/>
	</fieldset>
</form>
