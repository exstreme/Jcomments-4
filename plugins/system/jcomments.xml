<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_jcomments</name>
	<creationDate>October 2022</creationDate>
	<author>JComments team</author>
	<copyright>2006-2022 by Sergey M. Litvinov and exstreme and Vladimir Globulopolis</copyright>
	<authorUrl>https://github.com/exstreme/Jcomments-4</authorUrl>
	<license>https://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>4.1.0</version>
	<description>PLG_SYSTEM_JCOMMENTS_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\System\Jcomments</namespace>

	<files>
		<folder plugin="jcomments">services</folder>
		<folder>src</folder>
	</files>

	<languages folder="admin">
		<language tag="en-GB">language/en-GB/plg_system_jcomments.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_jcomments.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_system_jcomments.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_system_jcomments.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_system_jcomments.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_system_jcomments.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="disable_template_css"
						type="radio"
						default="0"
						class="btn-group btn-group-yesno"
						label="PLG_SYSTEM_JCOMMENTS_FIELD_DISABLETEMPLATECSS_LABEL"
						description="PLG_SYSTEM_JCOMMENTS_FIELD_DISABLETEMPLATECSS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="clear_rss"
						type="radio"
						default="0"
						class="btn-group btn-group-yesno"
						label="PLG_SYSTEM_JCOMMENTS_FIELD_CLEARTAGS_LABEL"
						description="PLG_SYSTEM_JCOMMENTS_FIELD_CLEARTAGS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
