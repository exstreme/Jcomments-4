<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="user" method="upgrade">
	<name>plg_user_jcomments</name>
	<creationDate>November 2021</creationDate>
	<author>JComments team</author>
	<copyright>2006-2022 by Sergey M. Litvinov and exstreme and Vladimir Globulopolis</copyright>
	<authorUrl>https://github.com/exstreme/Jcomments-4</authorUrl>
	<license>https://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>4.1.1</version>
	<description>PLG_USER_JCOMMENTS_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\User\Jcomments</namespace>

	<files>
		<folder plugin="jcomments">services</folder>
		<folder>forms</folder>
	</files>

	<languages folder="admin">
		<language tag="en-GB">language/en-GB/plg_user_jcomments.ini</language>
		<language tag="en-GB">language/en-GB/plg_user_jcomments.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_user_jcomments.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_user_jcomments.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_user_jcomments.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_user_jcomments.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="show_comments_link"
						type="radio"
						default="0"
						layout="joomla.form.field.radio.switcher"
						label="PLG_USER_JCOMMENTS_FIELD_COMMENTSLINK_LABEL"
						description="PLG_USER_JCOMMENTS_FIELD_COMMENTSLINK_DESC"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
						name="show_votes_link"
						type="radio"
						default="0"
						layout="joomla.form.field.radio.switcher"
						label="PLG_USER_JCOMMENTS_FIELD_VOTESLINK_LABEL"
						description="PLG_USER_JCOMMENTS_FIELD_VOTESLINK_DESC"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field
						name="show_subscriptions_link"
						type="radio"
						default="0"
						layout="joomla.form.field.radio.switcher"
						label="PLG_USER_JCOMMENTS_FIELD_SUBSCRIPTIONS_LABEL"
						description="PLG_USER_JCOMMENTS_FIELD_SUBSCRIPTIONS_DESC"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
