<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="quickicon" method="upgrade">
	<name>plg_quickicon_jcomments</name>
	<creationDate>August 2018</creationDate>
	<copyright>2006-2022 by Sergey M. Litvinov and exstreme and Vladimir Globulopolis</copyright>
	<authorUrl>https://github.com/exstreme/Jcomments-4</authorUrl>
	<license>https://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>4.0.2</version>
	<description>PLG_QUICKICON_JCOMMENTS_XML_DESCRIPTION</description>

	<files>
		<filename plugin="jcomments">jcomments.php</filename>
	</files>

	<languages folder="admin">
		<language tag="en-GB">language/en-GB/plg_quickicon_jcomments.ini</language>
		<language tag="en-GB">language/en-GB/plg_quickicon_jcomments.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_quickicon_jcomments.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_quickicon_jcomments.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_quickicon_jcomments.ini</language>
		<language tag="ru-RU">language/ru-RU/plg_quickicon_jcomments.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="context"
					type="text"
					default="mod_quickicon"
					description="PLG_QUICKICON_JCOMMENTS_GROUP_DESC"
					label="PLG_QUICKICON_JCOMMENTS_GROUP_LABEL"
				/>

				<field 
					name="displayedtext" 
					type="text" 
					default="" 
					description="PLG_QUICKICON_JCOMMENTS_DISPLAYEDTEXT_DESC"
					label="PLG_QUICKICON_JCOMMENTS_DISPLAYEDTEXT_LABEL"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
